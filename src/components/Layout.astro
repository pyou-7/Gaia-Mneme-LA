---
const {
  title = 'Gaia Mnémé',
  description = 'Energy, warmth, and ritual in every piece.',
  jsonLd = []
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og.jpg" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Fonts (inspired by editorial typography) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Fraunces:wght@600;700&display=swap" rel="stylesheet">

    <!-- Tight but practical CSP (allow Google Fonts) -->
    <meta http-equiv="Content-Security-Policy" content="
      default-src 'self';
      img-src 'self' data:;
      style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
      font-src 'self' https://fonts.gstatic.com;
      script-src 'self';
      object-src 'none';
      base-uri 'self';
      frame-ancestors 'none';
      form-action 'self' https:;
      upgrade-insecure-requests">

    {jsonLd.map((obj)=>(<script type="application/ld+json">{JSON.stringify(obj)}</script>))}
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a href="/" class="brand">Gaia Mnémé</a>
        <nav class="nav">
          <a href="/shop">Shop</a>
          <a href="/about">About</a>
          <a href="/faq">FAQ</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-grid">
        <div>
          <div class="brand">Gaia Mnémé</div>
          <p class="muted">Energy, warmth, and ritual in every piece.</p>
        </div>
        <div>
          <h4>Explore</h4>
          <ul>
            <li><a href="/shop">Shop</a></li>
            <li><a href="/about">Our Story</a></li>
            <li><a href="/faq">FAQ</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
        <div>
          <h4>Policies</h4>
          <ul>
            <li><a href="/returns">Returns</a></li>
            <li><a href="/privacy">Privacy</a></li>
            <li><a href="/terms">Terms</a></li>
          </ul>
        </div>
      </div>
      <div class="container footer-bottom">© <span id="year"></span> Gaia Mnémé</div>
    </footer>

    <script>document.getElementById('year').textContent=new Date().getFullYear()</script>
  </body>
</html>