---
const { title='Your Crystal Shop', description='Ethically sourced crystals', jsonLd=[] }=Astro.props;
---
<!doctype html><html lang="en"><head><meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>{title}</title><meta name="description" content={description}/><link rel="icon" href="/favicon.ico"/>
<meta property="og:title" content={title}/><meta property="og:description" content={description}/><meta property="og:image" content="/og.jpg"/>
<meta http-equiv="Content-Security-Policy" content="default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; font-src 'self'; script-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none'; form-action 'self' https:; upgrade-insecure-requests">
{jsonLd.map(obj=>(<script type="application/ld+json">{JSON.stringify(obj)}</script>))}
<link rel="stylesheet" href="/src/styles/global.css"/></head><body>
<header style="position:sticky;top:0;background:rgba(0,0,0,.5);backdrop-filter:blur(6px);border-bottom:1px solid rgba(255,255,255,.1)">
  <div class="container" style="display:flex;align-items:center;justify-content:space-between;height:64px">
    <a href="/" style="font-weight:700">Your Crystal Shop</a>
    <nav><a href="/shop">Shop</a><a style="margin-left:16px" href="/about">About</a><a style="margin-left:16px" href="/faq">FAQ</a><a style="margin-left:16px" href="/contact">Contact</a></nav>
  </div>
</header>
<main><slot/></main>
<footer style="border-top:1px solid rgba(255,255,255,.1);margin-top:40px">
  <div class="container" style="display:grid;grid-template-columns:2fr 1fr 1fr;gap:16px;padding:24px 0">
    <div><div style="font-weight:700">Your Crystal Shop</div><p style="color:#cfd3dc">Ethically sourced crystals, fast shipping.</p></div>
    <div><h4>Explore</h4><ul><li><a href="/shop">Shop</a></li><li><a href="/about">About</a></li><li><a href="/faq">FAQ</a></li><li><a href="/contact">Contact</a></li></ul></div>
    <div><h4>Policies</h4><ul><li><a href="/returns">Returns</a></li><li><a href="/privacy">Privacy</a></li><li><a href="/terms">Terms</a></li></ul></div>
  </div>
  <div class="container" style="border-top:1px solid rgba(255,255,255,.1);padding:12px 0;color:#9aa3b2">Â© <span id="year"></span> Your Crystal Shop</div>
</footer>
<script>document.getElementById('year').textContent=new Date().getFullYear()</script>
</body></html>